<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instalaciones"
    android:orientation="vertical"
    android:background="@color/md_black_1000">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instalaciones"
                android:textColor="@color/md_yellow_700"
                android:layout_gravity="center"
                android:textSize="30dp"></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/m" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/te1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/tes" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/t5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/te3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/t4" />

        </LinearLayout>
    </ScrollView>







